<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Owner Tree View -->
    <record id="view_vet_owner_tree" model="ir.ui.view">
        <field name="name">vet.owner.tree</field>
        <field name="model">vet.owner</field>
        <field name="arch" type="xml">
            <tree string="Owners">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="mobile"/>
                <field name="city"/>
                <field name="patient_count"/>
            </tree>
        </field>
    </record>

    <!-- Owner Form View -->
    <record id="view_vet_owner_form" model="ir.ui.view">
        <field name="name">vet.owner.form</field>
        <field name="model">vet.owner</field>
        <field name="arch" type="xml">
            <form string="Owner">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Owner Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Contact Information">
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                            <field name="mobile" widget="phone"/>
                        </group>
                        <group string="Other">
                            <field name="patient_count"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Address">
                        <group>
                            <field name="street"/>
                            <field name="street2"/>
                            <field name="city"/>
                        </group>
                        <group>
                            <field name="state_id"/>
                            <field name="zip"/>
                            <field name="country_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Pets">
                            <field name="patient_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="species_id"/>
                                    <field name="breed"/>
                                    <field name="age"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Additional notes about the owner..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Owner Search View -->
    <record id="view_vet_owner_search" model="ir.ui.view">
        <field name="name">vet.owner.search</field>
        <field name="model">vet.owner</field>
        <field name="arch" type="xml">
            <search string="Search Owners">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="mobile"/>
                <field name="city"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="City" name="group_city" context="{'group_by': 'city'}"/>
                    <filter string="Country" name="group_country" context="{'group_by': 'country_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Owner Action -->
    <record id="action_vet_owner" model="ir.actions.act_window">
        <field name="name">Owners</field>
        <field name="res_model">vet.owner</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first pet owner!
            </p>
            <p>
                Add contact information for pet owners.
            </p>
        </field>
    </record>
</odoo>
