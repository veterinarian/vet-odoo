<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inherit User Form to add Provider Type -->
    <record id="view_users_form_vet_clinic" model="ir.ui.view">
        <field name="name">res.users.form.vet.clinic</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Veterinary Clinic" name="vet_clinic">
                    <group>
                        <group>
                            <field name="provider_type_id" />
                            <field name="is_provider" />
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
