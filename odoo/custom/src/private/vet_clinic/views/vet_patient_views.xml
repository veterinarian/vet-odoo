<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Patient Tree View -->
    <record id="view_vet_patient_tree" model="ir.ui.view">
        <field name="name">vet.patient.tree</field>
        <field name="model">vet.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="owner_id" />
                <field name="species_id" />
                <field name="breed" />
                <field name="gender" />
                <field name="age" />
            </tree>
        </field>
    </record>

    <!-- Patient Form View -->
    <record id="view_vet_patient_form" model="ir.ui.view">
        <field name="name">vet.patient.form</field>
        <field name="model">vet.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <header>
                    <button
                        name="%(action_vet_appointment_new)d"
                        type="action"
                        string="New Appointment"
                        class="oe_highlight"
                    />
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar" />
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="%(action_vet_medical_note)d"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-stethoscope"
                            context="{'default_patient_id': active_id, 'search_default_patient_id': active_id}"
                        >
                            <field
                                name="medical_note_count"
                                widget="statbutton"
                                string="Notes"
                            />
                        </button>
                        <button
                            name="%(action_vet_problem)d"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-heartbeat"
                            context="{'default_patient_id': active_id, 'search_default_patient_id': active_id, 'search_default_filter_active': 1}"
                        >
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="active_problem_count" /> / <field
                                        name="problem_count"
                                    />
                                </span>
                                <span class="o_stat_text">Problems</span>
                            </div>
                        </button>
                        <button
                            name="%(action_vet_appointment)d"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-calendar"
                            context="{'default_patient_id': active_id, 'search_default_patient_id': active_id}"
                        >
                            <field
                                name="appointment_count"
                                widget="statbutton"
                                string="Appointments"
                            />
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Patient Name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="owner_id" />
                            <field name="species_id" />
                            <field name="breed" />
                            <field name="gender" />
                        </group>
                        <group>
                            <field name="age_entry_mode" invisible="1" />
                            <field name="birth_date_approximate" invisible="1" />

                            <!-- Birth Date Entry Mode (default) -->
                            <label
                                for="birth_date"
                                invisible="age_entry_mode == True"
                            />
                            <div class="o_row" invisible="age_entry_mode == True">
                                <field name="birth_date" class="oe_inline" />
                                <button
                                    name="action_toggle_age_entry_mode"
                                    type="object"
                                    string="â†” Age"
                                    class="btn-link"
                                    title="Enter age instead"
                                />
                            </div>

                            <label
                                for="age"
                                string="Age"
                                invisible="age_entry_mode == True"
                            />
                            <field
                                name="age"
                                readonly="1"
                                invisible="age_entry_mode == True"
                            />

                            <!-- Age Entry Mode -->
                            <label
                                for="birth_date"
                                string="Birth Date (calculated)"
                                invisible="age_entry_mode == False"
                            />
                            <div class="o_row" invisible="age_entry_mode == False">
                                <field
                                    name="birth_date"
                                    class="oe_inline"
                                    readonly="1"
                                />
                                <button
                                    name="action_toggle_age_entry_mode"
                                    type="object"
                                    string="â†” Date"
                                    class="btn-link"
                                    title="Enter birth date instead"
                                />
                                <span
                                    class="badge badge-warning ml-2"
                                    invisible="birth_date_approximate == False"
                                >Approximate</span>
                            </div>

                            <label
                                for="age_years"
                                string="Age"
                                invisible="age_entry_mode == False"
                            />
                            <div class="o_row" invisible="age_entry_mode == False">
                                <field
                                    name="age_years"
                                    class="oe_inline"
                                    placeholder="0"
                                />
                                <span>years</span>
                                <field
                                    name="age_months"
                                    class="oe_inline"
                                    placeholder="0"
                                />
                                <span>months</span>
                            </div>

                            <label for="weight_display" string="Weight" />
                            <div class="o_row">
                                <field name="weight_display" class="oe_inline" />
                                <field
                                    name="weight_unit"
                                    class="oe_inline"
                                    widget="radio"
                                    options="{'horizontal': true}"
                                />
                            </div>
                            <field name="neutered" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="color" />
                            <field name="microchip_number" />
                        </group>
                        <group>
                            <field name="active" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Medical Information">
                            <group>
                                <field
                                    name="allergies"
                                    placeholder="Known allergies..."
                                />
                                <field
                                    name="medical_notes"
                                    placeholder="Medical notes and history..."
                                />
                            </group>
                        </page>
                        <page string="Appointments">
                            <field name="appointment_ids">
                                <tree>
                                    <field name="name" />
                                    <field name="appointment_date" />
                                    <field name="appointment_type" />
                                    <field name="veterinarian_id" />
                                    <field name="state" />
                                </tree>
                            </field>
                        </page>
                        <page string="Medical Record" name="medical_record">
                            <group>
                                <button
                                    name="%(action_vet_medical_note)d"
                                    type="action"
                                    string="New Note"
                                    class="btn-primary"
                                    context="{'default_patient_id': active_id, 'default_note_type': 'soap'}"
                                />
                            </group>
                            <field
                                name="medical_note_ids"
                                widget="medical_timeline"
                                nolabel="1"
                            />
                        </page>
                        <page string="Problem List" name="problem_list">
                            <group>
                                <button
                                    name="%(action_vet_problem)d"
                                    type="action"
                                    string="Add Problem"
                                    class="btn-primary"
                                    context="{'default_patient_id': active_id, 'default_status': 'active'}"
                                />
                            </group>
                            <field name="problem_ids">
                                <tree
                                    decoration-success="status == 'resolved'"
                                    decoration-warning="status == 'active'"
                                >
                                    <field name="status" />
                                    <field name="name" />
                                    <field name="onset_date" />
                                    <field name="resolved_date" optional="hide" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- Patient Kanban View -->
    <record id="view_vet_patient_kanban" model="ir.ui.view">
        <field name="name">vet.patient.kanban</field>
        <field name="model">vet.patient</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id" />
                <field name="name" />
                <field name="owner_id" />
                <field name="species_id" />
                <field name="image" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img
                                    t-att-src="kanban_image('vet.patient', 'image', record.id.raw_value)"
                                    alt="Patient"
                                />
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field
                                        name="name"
                                    /></strong>
                                <div><field name="species_id" /> - <field
                                        name="breed"
                                    /></div>
                                <div>Owner: <field name="owner_id" /></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Patient Search View -->
    <record id="view_vet_patient_search" model="ir.ui.view">
        <field name="name">vet.patient.search</field>
        <field name="model">vet.patient</field>
        <field name="arch" type="xml">
            <search string="Search Patients">
                <field name="name" />
                <field name="owner_id" />
                <field name="species_id" />
                <field name="breed" />
                <field name="microchip_number" />
                <filter
                    string="Active"
                    name="active"
                    domain="[('active', '=', True)]"
                />
                <filter
                    string="Inactive"
                    name="inactive"
                    domain="[('active', '=', False)]"
                />
                <group expand="0" string="Group By">
                    <filter
                        string="Species"
                        name="group_species"
                        context="{'group_by': 'species_id'}"
                    />
                    <filter
                        string="Owner"
                        name="group_owner"
                        context="{'group_by': 'owner_id'}"
                    />
                    <filter
                        string="Gender"
                        name="group_gender"
                        context="{'group_by': 'gender'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <!-- Patient Action -->
    <record id="action_vet_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">vet.patient</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patient!
            </p>
            <p>
                Add information about pets and their owners to start managing your veterinary clinic.
            </p>
        </field>
    </record>
</odoo>
