<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Room Tree View -->
    <record id="view_vet_room_tree" model="ir.ui.view">
        <field name="name">vet.room.tree</field>
        <field name="model">vet.room</field>
        <field name="arch" type="xml">
            <tree string="Rooms" editable="bottom">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="description" />
                <field name="active" widget="boolean_toggle" />
            </tree>
        </field>
    </record>

    <!-- Room Form View -->
    <record id="view_vet_room_form" model="ir.ui.view">
        <field name="name">vet.room.form</field>
        <field name="model">vet.room</field>
        <field name="arch" type="xml">
            <form string="Room">
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        invisible="active"
                    />
                    <group>
                        <group>
                            <field name="name" />
                            <field name="sequence" />
                        </group>
                        <group>
                            <field name="active" />
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description..." />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Room Action -->
    <record id="action_vet_room" model="ir.actions.act_window">
        <field name="name">Rooms</field>
        <field name="res_model">vet.room</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new room
            </p>
            <p>
                Define the different rooms or areas in your veterinary clinic
                where appointments can be held.
            </p>
        </field>
    </record>
</odoo>
