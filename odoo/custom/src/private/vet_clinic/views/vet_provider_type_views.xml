<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Provider Type Tree View -->
    <record id="view_vet_provider_type_tree" model="ir.ui.view">
        <field name="name">vet.provider.type.tree</field>
        <field name="model">vet.provider.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="is_provider" />
                <field name="description" />
                <field name="active" widget="boolean_toggle" />
            </tree>
        </field>
    </record>

    <!-- Provider Type Form View -->
    <record id="view_vet_provider_type_form" model="ir.ui.view">
        <field name="name">vet.provider.type.form</field>
        <field name="model">vet.provider.type</field>
        <field name="arch" type="xml">
            <form string="Provider Type">
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        invisible="active"
                    />
                    <group>
                        <group>
                            <field name="name" />
                            <field name="is_provider" />
                        </group>
                        <group>
                            <field name="sequence" />
                            <field name="active" />
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description..." />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Provider Type Action -->
    <record id="action_vet_provider_type" model="ir.actions.act_window">
        <field name="name">Provider Types</field>
        <field name="res_model">vet.provider.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new provider type
            </p>
            <p>
                Define different types of staff members (Doctor, Tech, Groomer, etc.)
                and mark which types can provide services to patients.
            </p>
        </field>
    </record>
</odoo>
