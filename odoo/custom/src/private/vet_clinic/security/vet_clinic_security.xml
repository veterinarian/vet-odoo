<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="module_vet_clinic_category" model="ir.module.category">
        <field name="name">Veterinary Clinic</field>
        <field name="description">Veterinary Clinic Management</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_vet_clinic_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_vet_clinic_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_vet_clinic_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_vet_clinic_category"/>
        <field name="implied_ids" eval="[(4, ref('group_vet_clinic_user'))]"/>
    </record>

    <!-- Automatic group assignment: Odoo Users get vet_clinic User access -->
    <record id="base.group_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_vet_clinic_user'))]"/>
    </record>

    <!-- Automatic group assignment: Odoo Administrators get vet_clinic Manager access -->
    <record id="base.group_system" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_vet_clinic_manager'))]"/>
    </record>
</odoo>
