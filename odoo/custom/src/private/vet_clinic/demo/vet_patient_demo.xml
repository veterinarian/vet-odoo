<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Demo Patients -->
    <record id="demo_patient_buddy" model="vet.patient">
        <field name="name">Buddy</field>
        <field name="owner_id" ref="demo_owner_smith" />
        <field name="species_id" ref="species_dog" />
        <field name="breed">Golden Retriever</field>
        <field name="gender">male</field>
        <field
            name="birth_date"
            eval="(DateTime.now() - timedelta(days=365*3 + 120)).strftime('%Y-%m-%d')"
        />
        <field name="color">Golden</field>
        <field name="weight" eval="32.5" />
        <field name="neutered" eval="True" />
        <field name="microchip_number">982000123456789</field>
        <field name="allergies">No known allergies</field>
        <field
            name="medical_notes"
        >Friendly and cooperative during exams. Previous history of ear infections.</field>
    </record>

    <record id="demo_patient_whiskers" model="vet.patient">
        <field name="name">Whiskers</field>
        <field name="owner_id" ref="demo_owner_johnson" />
        <field name="species_id" ref="species_cat" />
        <field name="breed">Siamese</field>
        <field name="gender">female</field>
        <field
            name="birth_date"
            eval="(DateTime.now() - timedelta(days=365*2 + 45)).strftime('%Y-%m-%d')"
        />
        <field name="color">Seal Point</field>
        <field name="weight" eval="4.2" />
        <field name="neutered" eval="True" />
        <field name="allergies">Sensitive to chicken-based foods</field>
        <field name="medical_notes">Indoor cat. Can be anxious during visits.</field>
    </record>

