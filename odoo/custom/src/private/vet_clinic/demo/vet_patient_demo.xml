        <field name="weight" eval="5.8" />
        <field name="neutered" eval="True" />
        <field name="allergies">None</field>
        <field name="medical_notes">Very social cat. Tolerates handling well.</field>
    </record>

    <record id="demo_patient_charlie" model="vet.patient">
        <field name="name">Charlie</field>
        <field name="owner_id" ref="demo_owner_davis" />
        <field name="species_id" ref="species_dog" />
        <field name="breed">Beagle</field>
        <field name="gender">male</field>
        <field
            name="birth_date"
            eval="(DateTime.now() - timedelta(days=365*5 + 30)).strftime('%Y-%m-%d')"
        />
